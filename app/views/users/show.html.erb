<div class="row">
  <div class="col-sm-offset-2 col-sm-8">
    <h2>ユーザー情報</h2>
    <table class="table table-striped">
      <tr>
        <th>ユーザー名</th>
        <td><%= @user.username %></td>
      </tr>
      <tr class="active">
        <th>メールアドレス</th>
        <td><%= @user.email %></td>
      </tr>
    </table>
    <% if current_user==@user %> 
      <%= render 'follow_form' if user_signed_in? %>
    　<%= link_to 'プロフィール変更', edit_user_registration_path %>
    <% end %>
  </div>
</div>
