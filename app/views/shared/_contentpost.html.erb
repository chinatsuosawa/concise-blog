<li id="contentpost-<%= contentpost.id %>">
  <div class="panel panel-default">
    <div class="panel-heading">
      <span class="user"><%= link_to contentpost.user.username, contentpost.user %></span>
      <span class="title"><%= contentpost.title %></span>
    </div>
    <div class="panel-body">
      <span class="content"><%= contentpost.content %></span>
    </div>
    <div class="panel-footer">
      <% if current_user == contentpost.user %>
        <span class="update">
          <%= link_to "edit" , edit_contentpost_path(contentpost) %>
        </span> | 
        <span class="delete">
          <%= link_to "delete", contentpost, method: :destroy,
                                             data: { confirm: "削除してよろしいですか？" } %>
        </span>
      <% end %>
    </div>
  </div>
</li>